{
  "version": 2,
  "name": "main-cat",
  "defaultFps": 8,
  "hitAlphaThreshold": 24,
  "frameImages": [
    { "id": "neutral", "image": "source/pet_emotions/main_cat/neutral.png" },
    { "id": "happy", "image": "source/pet_emotions/main_cat/happy.png" },
    { "id": "tired", "image": "source/pet_emotions/main_cat/tired.png" },
    { "id": "sleep", "image": "source/pet_emotions/main_cat/sleep.png" }
  ],
  "states": {
    "idle": { "emotions": ["neutral", "neutral", "happy", "neutral", "sleep"], "fps": 2, "loop": true },
    "walk": { "emotions": ["neutral", "happy", "neutral", "happy"], "fps": 6, "loop": true },
    "jump": { "emotions": ["happy", "neutral"], "fps": 7, "loop": false },
    "fall": { "emotions": ["tired", "sleep"], "fps": 6, "loop": true },
    "drag": { "emotions": ["neutral"], "fps": 1, "loop": true }
  }
}
